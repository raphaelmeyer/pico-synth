{
  "version": 5,
  "configurePresets": [
    {
      "name": "pico",
      "displayName": "Pico Config",
      "generator": "Ninja",
      "binaryDir": "${sourceParentDir}/_build/pico",
      "cacheVariables": {
        "PICO_BOARD": "pico",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "host",
      "displayName": "Host Config",
      "generator": "Ninja",
      "binaryDir": "${sourceParentDir}/_build/host",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "pico",
      "displayName": "Pico Build",
      "configurePreset": "pico"
    },
    {
      "name": "host",
      "displayName": "Host Build",
      "configurePreset": "host"
    }
  ],
  "testPresets": [
    {
      "name": "host",
      "displayName": "Host Test",
      "configurePreset": "host"
    }
  ]
}