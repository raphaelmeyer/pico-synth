{
  "version": 5,
  "configurePresets": [
    {
      "name": "pico",
      "displayName": "Pico Config",
      "generator": "Ninja",
      "binaryDir": "${sourceParentDir}/_build/pico",
      "cacheVariables": {
        "PICO_BOARD": "pico",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "gcc",
      "displayName": "GCC Config",
      "generator": "Ninja",
      "binaryDir": "${sourceParentDir}/_build/gcc",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      }
    },
    {
      "name": "clang",
      "displayName": "clang Config",
      "generator": "Ninja",
      "binaryDir": "${sourceParentDir}/_build/clang",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "pico",
      "displayName": "Pico Build",
      "configurePreset": "pico"
    },
    {
      "name": "gcc",
      "displayName": "GCC Build",
      "configurePreset": "gcc"
    },
    {
      "name": "clang",
      "displayName": "clang Build",
      "configurePreset": "clang"
    }
  ],
  "testPresets": [
    {
      "name": "gcc",
      "displayName": "GCC Test",
      "configurePreset": "gcc"
    },
    {
      "name": "clang",
      "displayName": "clang Test",
      "configurePreset": "clang"
    }
  ]
}